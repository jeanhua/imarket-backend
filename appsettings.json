    "RestPasswordUrl":"this url will send to the user who requests to reset his password"
  },
  "admin":{
    "Username":"admin",
    "Email":"admin@imarkt.com",
    "Password":"your password"
  },
  "Cache":{
    "Posts":30,
    "SinglePost":180
  },
  "MailSetting":{
    "Enable":false,
    "Name":"iMarket",
    "EmailAddress":"your email address",
    "EmailPassword":"your-email-password",
    "HtmlEnable":false,
    "SmtpHost":"smtp.example.com",
